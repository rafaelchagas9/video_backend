# Server
PORT=3000
HOST=localhost
NODE_ENV=development

# Database (SQLite - deprecated, use PostgreSQL instead)
DATABASE_PATH=./data/database.db

# PostgreSQL Database (recommended)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=video_streaming_db
POSTGRES_USER=vueverse
POSTGRES_PASSWORD=vueverse_dev_password
POSTGRES_MAX_CONNECTIONS=20

# Paths
THUMBNAILS_DIR=./data/thumbnails
PROFILE_PICTURES_DIR=./data/profile-pictures
LOGS_DIR=./logs

# Authentication
SESSION_SECRET=change-this-to-a-random-secret-in-production
SESSION_EXPIRY_HOURS=168

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
THUMBNAIL_SIZE=320x240
THUMBNAIL_TIMESTAMP=5.0
THUMBNAIL_FORMAT=webp
THUMBNAIL_QUALITY=80
THUMBNAIL_POSITION_PERCENT=20

# Storyboards (Vidstack slider thumbnails)
STORYBOARDS_DIR=./data/storyboards
STORYBOARD_TILE_WIDTH=256
STORYBOARD_TILE_HEIGHT=144
STORYBOARD_INTERVAL_SECONDS=5
STORYBOARD_FORMAT=webp
STORYBOARD_QUALITY=80

# File Scanning
DEFAULT_SCAN_INTERVAL_MINUTES=30
MAX_FILE_SIZE_GB=50

# Video Conversion (GPU Acceleration)
VAAPI_DEVICE=/dev/dri/renderD128
CONVERTED_VIDEOS_DIR=./data/converted
CONVERSION_MAX_CONCURRENT=1

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# Face Recognition
FACE_SERVICE_URL=http://localhost:8100
FACE_SIMILARITY_THRESHOLD=0.65
FACE_AUTO_TAG_THRESHOLD=0.75
FACE_DETECTION_BATCH_SIZE=10
FACE_DETECTION_RETRY_INTERVAL_MS=300000
FACE_DETECTION_MAX_RETRIES=3

# Frame Extraction (unified frame extraction for thumbnails, storyboards, and faces)
FRAME_EXTRACTION_TEMP_DIR=/dev/shm
FRAME_EXTRACTION_FORMAT=jpg
FRAME_EXTRACTION_QUALITY=90
