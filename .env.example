# Server
PORT=3000
HOST=localhost
NODE_ENV=development

# Database
DATABASE_PATH=./data/database.db

# Paths
THUMBNAILS_DIR=./data/thumbnails
PROFILE_PICTURES_DIR=./data/profile-pictures
LOGS_DIR=./logs

# Authentication
SESSION_SECRET=change-this-to-a-random-secret-in-production
SESSION_EXPIRY_HOURS=168

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
THUMBNAIL_SIZE=320x240
THUMBNAIL_TIMESTAMP=5.0
THUMBNAIL_FORMAT=webp
THUMBNAIL_QUALITY=80
THUMBNAIL_POSITION_PERCENT=20

# File Scanning
DEFAULT_SCAN_INTERVAL_MINUTES=30
MAX_FILE_SIZE_GB=50

# Video Conversion (GPU Acceleration)
VAAPI_DEVICE=/dev/dri/renderD128
CONVERTED_VIDEOS_DIR=./data/converted
CONVERSION_MAX_CONCURRENT=2

# Redis (for job queue)
REDIS_URL=redis://localhost:6379
